<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp">
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/ic_user"
        android:layout_marginTop="10dp"
        android:id="@+id/tv_Costemr"
        />
<TextView
    android:layout_width="200dp"
    android:layout_height="50dp"
    app:layout_constraintRight_toLeftOf="@id/tv_Costemr"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="30dp"
    android:textSize="15dp"
    android:text="علي عثمان"
    android:layout_marginRight="20dp"
    android:textColor="@color/Gray"
    />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintRight_toLeftOf="@id/tv_Costemr"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="55dp"
    android:textSize="15dp"
    android:text="+962555555"
    android:textColor="@color/Gray"
    android:layout_marginRight="15dp"
    />

    <TextView
        android:id="@+id/tv_timeapp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:text="وقت الطلب: 12:30 مساء 20/5/2022"
        android:textSize="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tv_timeacess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="55dp"
        android:padding="10dp"
        android:text="وقت الرد:12:45 مساء"
        android:textSize="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="_________________________________"
        android:textColor="@color/Gray"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="10dp"
        />

</android.support.constraint.ConstraintLayout>